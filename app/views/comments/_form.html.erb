<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :pseudo %>
		<%= f.text_field :name, :class => 'form-control' %>
	</p>

	<p>
		<%= f.label :Votre_message %><br>
		<%= f.text_area :body, :class => 'form-control' %>
	</p>
	<br>
	<p>
		<%= f.submit "Ajouter", :class => "btn btn-lg btn-primary btn-block" %>
	</p>
<% end %>