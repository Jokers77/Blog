<p id="notice"><%= notice %></p>

<% if current_user.try(:admin?) %>
<%= link_to 'Modifier', edit_post_path(@post) %> | <%= link_to 'Retour', root_path %>
<% else %>
<span class="glyphicon glyphicon-chevron-left"></span>  <%= link_to 'Retour', root_path, :class => "retour" %>
<% end %>


<div class="panel">
<div class="panel-body">

<div class="row">    
            <br>
            <div class="col-md-2 col-sm-3 text-center">
            </div>
            <div class="col-md-10 col-sm-9">
              <h3><%= @post.title %></h3>
              <div class="row">
                <div class="col-xs-9">
                  <p>
  					<%= @post.content %>
					</p>
                <div class="col-xs-3"></div>
              </div>
              <br><br>
            </div>
          </div>
          <hr>
</div>


<div id="comments">
  <h2><%= @post.comments.count %> Commentaires <i class="ion-clipboard"></i></h2>

  <%= render @post.comments %>

  <h3>Ajouter un commentaire <span class="glyphicon glyphicon-pencil"></span></h3>
  <%= render "comments/form" %>
</div>